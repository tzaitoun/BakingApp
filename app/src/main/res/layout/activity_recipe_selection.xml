<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zaitoun.talat.bakingapp.ui.RecipeSelectionActivity">

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rv_recipe_selection">
    </android.support.v7.widget.RecyclerView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/tv_no_connection"
        android:text="@string/no_connection"
        android:textColor="@android:color/darker_gray"
        android:textSize="22sp"
        android:visibility="invisible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/tv_error"
        android:text="@string/data_error"
        android:textSize="22sp"
        android:textColor="@android:color/darker_gray"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_no_connection"
        android:layout_centerHorizontal="true"
        android:id="@+id/iv_refresh"
        android:src="@mipmap/ic_refresh_black_48dp"
        android:tint="@android:color/darker_gray"
        android:visibility="invisible"
        android:layout_marginTop="8dp"/>

</RelativeLayout>
